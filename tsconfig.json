{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],

    /* Module system */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* React / JSX */
    "jsx": "react-jsx",

    /* Output (used later by bundler / d.ts) */
    "declaration": true,
    "emitDeclarationOnly": false,

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Interop & ergonomics */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Build hygiene */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* Do NOT emit JS when type-checking */
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
